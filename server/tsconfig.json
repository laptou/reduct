{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "CommonJS",
    "target": "ES2018",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
