{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@resources/*": ["../resources/*"],
      "@/*": ["*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "scripts/**/*.js",
    "scripts/**/*.mjs"
  ]
}
